{
  "name": "WhatsApp Agent System",
  "description": "A WhatsApp-based inspection agent management system",
  "repository": "https://github.com/yourusername/whatsapp_agent_system",
  "keywords": ["python", "fastapi", "whatsapp", "twilio"],
  "env": {
    "TWILIO_ACCOUNT_SID": {
      "description": "Your Twilio Account SID",
      "required": true
    },
    "TWILIO_AUTH_TOKEN": {
      "description": "Your Twilio Auth Token",
      "required": true
    },
    "TWILIO_WHATSAPP_NUMBER": {
      "description": "Your Twilio WhatsApp Number",
      "required": true
    },
    "MONGODB_URI": {
      "description": "Your MongoDB connection string",
      "required": true
    },
    "MONGODB_DB_NAME": {
      "description": "Your MongoDB database name",
      "value": "whatsapp_agent_system"
    },
    "SECRET_KEY": {
      "description": "A secret key for your application",
      "generator": "secret"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
